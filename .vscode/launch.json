    "version": "0.2.0",
    "configurations": 
    [
        {
            "name": "Run Doom1",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/game/doom1/chocolate-doom",
            "args": ["-iwad", "doom1.wad"],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/game/doom1",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "copydoomexe",
            "miDebuggerPath": "/usr/bin/gdb"
        },
